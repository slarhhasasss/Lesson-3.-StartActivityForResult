<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.kolesnikovdmitry.lesson3">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_real"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ChoiceActivity"
            android:screenOrientation="portrait"
            android:label="@string/manifest_label_choice_activity"/>

        <activity android:name=".DatPoEbaluActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog.MinWidth"
            android:label="@string/button_dat_po_ebalu_activity_main">
            <intent-filter>
                <action android:name="ru.kolesnikovdmitry.lesson3.DatPoEbaluActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>